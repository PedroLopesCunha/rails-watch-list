<!-- HERO SECTION -->
<div class="hero">
  <div class="hero-content">
    <h1>Save any kind of movies</h1>
    <h2>Classic</h2>
  </div>
</div>

<div class="container my-5">

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3>My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
  </div>

  <div class="lists-grid">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: "list-card" do %>
        <div class="list-card-bg" style="background-image: url('/mnt/data/Screenshot 2025-11-20 at 16.05.19.png');">
          <div class="list-card-title"><%= list.name %></div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
